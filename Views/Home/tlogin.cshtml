@model Quiz.Models.TBL_ADMIN

@{
    ViewBag.Title = "tlogin";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Admin Login</h4>
                    </div>

                    <div class="card-body">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mt-3 text-capitalize">
                            @Html.LabelFor(model => model.AD_NAME, "Enter Name", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3 text-capitalize">
                            @Html.LabelFor(model => model.AD_PASSWORD, "Enter Password", htmlAttributes: new { @class = "control-label" })
                            @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<p class="text-center text-danger">@ViewBag.msg</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
