@model Quiz.Models.TBL_STUDENT

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Register</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .alert {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    @if (ViewBag.msg != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.msg
        </div>
    }
    <div class="container">
        <h3>Student Register</h3>

        @using (@Html.BeginForm("sregister", "Home", FormMethod.Post, new { enctype = "multipart/form-data"}))
        {
        <div class="form-group mt-4">
            @Html.LabelFor(x => x.S_NAME,"Enter Student Name", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
        </div>
     

        <div class="form-group mt-3">
            @Html.LabelFor(x => x.S_PASSWORD,"Enter Your Password", htmlAttributes: new { @class = "control-label" })
            @Html.PasswordFor(x => x.S_PASSWORD, new { @class = "form-control" })
        </div>
      

        <div class="form-group mt-3">
            <label for="imgfile" class="control-label">Image:</label>
            <input type="file" class="form-control" id="imgfile" name="imgfile" />
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-4">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
        }
    </div>
</body>
</html>
